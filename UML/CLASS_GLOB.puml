@startuml "Diagramme de classes global"

title Diagramme de classes global - Architecture principale

package "Authentification" {
    class Utilisateur {
        +id: UUID
        +pseudo: String
        +email: String
        +motDePasse: String
        +reputation: int
        +ticketsOr: int
        +ticketsArgent: int
        +historiqueDuels: List<Duel>
    }
}

package "Matchmaking" {
    class Duel {
        +id: UUID
        +joueur1: Utilisateur
        +joueur2: Utilisateur
        +statut: StatutDuel
        +resultat: String
    }
}

package "Gestion des Tournois" {
    class Tournoi {
        +id: UUID
        +nom: String
        +participants: List<Utilisateur>
        +dateDebut: Date
        +statut: StatutTournoi
        +matchs: List<Duel>
    }
}

package "Gestion des Tickets" {
    class Ticket {
        +type: String
        +quantite: int
        +valeur: float
    }

    class Paiement {
        +id: UUID
        +montant: float
        +statut: String
    }
}

package "Administration" {
    class Administrateur {
        +id: UUID
        +nom: String
        +creerTournoi()
        +arbitrerLitige()
    }
}

